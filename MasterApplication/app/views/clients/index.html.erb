<p id="notice"><%= notice %></p>

<div class="table-responsive index-table-layout">
<h1>Your Applications</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Lender</th>
      <th>Applied</th>
      <th>Application Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="table-body table-striped">
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.mailing_address %></td>
        <td><%= client.city %></td>
        <td><%= client.zipcode %></td>
        <td><%= client.primary_phone %></td>
        <td><%= client.email_address %></td>
        <td><%= client.housing_type %></td>
        <td><%= client.housing_payment %></td>
        <td><%= client.gross_income %></td>
        <td><%= client.employment_status %></td>
        <td><%= client.employer %></td>
        <td><%= client.birth_date %></td>
        <td><%= client.marital_status %></td>
        <td><%= client.social_security_number %></td>
        <td><%= client.mothers_maiden_name %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Delete Application', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
