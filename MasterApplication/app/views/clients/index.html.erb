<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Mailing address</th>
      <th>City</th>
      <th>Zipcode</th>
      <th>Primary phone</th>
      <th>Email address</th>
      <th>Housing type</th>
      <th>Housing payment</th>
      <th>Gross income</th>
      <th>Employer</th>
      <th>Marital status</th>
      <th>Social security number</th>
      <th>Mothers maiden name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.first_name %></td>
        <td><%= client.last_name %></td>
        <td><%= client.mailing_address %></td>
        <td><%= client.city %></td>
        <td><%= client.zipcode %></td>
        <td><%= client.primary_phone %></td>
        <td><%= client.email_address %></td>
        <td><%= client.housing_type %></td>
        <td><%= client.housing_payment %></td>
        <td><%= client.gross_income %></td>
        <td><%= client.employer %></td>
        <td><%= client.marital_status %></td>
        <td><%= client.social_security_number %></td>
        <td><%= client.mothers_maiden_name %></td>
        <td><%= link_to 'Show', client %></td>
        <td><%= link_to 'Edit Client', edit_client_path(client) %></td>
        <td><%= link_to 'Delete Client', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

